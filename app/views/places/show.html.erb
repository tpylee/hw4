<h1><%= @place["name"] %></h1>

<h2>My Entries</h2>
<% for entry in @entries %>
  <h3><%= entry["title"] %></h3>
  <h4><%= entry["occurred_on"] %></h4>
  <p><%= entry["description"] %></p>
<% end %>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>
<div class="card">
  <div class="card-body">
    <h2 class="card-title"><%= @place.name %></h2>
    <p class="card-text"><%= @place.description %></p>

    <% if @place.image.attached? %>
      <img src="<%= url_for(@place.image) %>" class="img-fluid" alt="Place Image">
    <% end %>

    <a href="<%= new_place_path %>" class="btn btn-success">Add New Place</a>
    <a href="<%= edit_place_path(@place) %>" class="btn btn-warning">Edit</a>
    <%= link_to "Delete", place_path(@place), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
  </div>
</div>